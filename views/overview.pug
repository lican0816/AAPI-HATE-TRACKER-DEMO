extends base

block content
  main.main
    .card-container
    
      each incident in incidents
        .card
          .card__header
            .card__picture
              .card__picture-overlay ;
            
            h3.heading-tertirary
              span= incident.name.substring(0,15)

          .card__details
        
            p.card__text.card__text--height= `${incident.description.substring(0,180)} ......`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
              span= incident.city
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              span= incident.date.toLocaleString('en-us', {month: 'long', year: 'numeric'})
          

          .card__footer
            
           
            p.card__ratings
              span.card__footer-text= ``

            a.btn.btn--green.btn--small(href=`/incident/${incident.slug}`) Details